
<%= form_with model: product, local: true, class: "needs-validation" do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Product Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter product name", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.rich_text_area :description, class: "form-control", placeholder: "Enter description" %>
  </div>

  <div class="mb-3">
    <%= form.label :featured_image, "Featured Image", class: "form-label" %>
    <%= form.file_field :featured_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :inventory_count, "Inventory Count", class: "form-label" %>
    <%= form.number_field :inventory_count, class: "form-control", placeholder: "Enter inventory count" %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
