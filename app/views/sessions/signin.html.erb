<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 400px;">
    <h3 class="text-center mb-4">Đăng Ký</h3>
    <%= form_with model: @user, url: users_path, local: true do |form| %>
      <!-- Họ tên -->
      <div class="mb-3">
        <%= form.label :name, "Họ tên", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Nhập họ tên của bạn", required: true, autofocus: true %>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Nhập email của bạn", required: true, autocomplete: "username" %>
      </div>

      <!-- Mật khẩu -->
      <div class="mb-3">
        <%= form.label :password, "Mật khẩu", class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu", required: true, minlength: 6, maxlength: 72 %>
      </div>

      <!-- Xác nhận mật khẩu -->
      <div class="mb-3">
        <%= form.label :password_confirmation, "Xác nhận mật khẩu", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Xác nhận mật khẩu", required: true %>
      </div>

      <!-- Nút đăng ký -->
      <div class="d-grid">
        <%= form.submit "Đăng Ký", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p class="mb-0">Đã có tài khoản? <%= link_to "Đăng nhập", new_session_path, class: "text-decoration-none" %></p>
    </div>
  </div>
</div>
