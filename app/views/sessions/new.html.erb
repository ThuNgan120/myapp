<%= tag.div(flash[:alert], class: "alert alert-danger") if flash[:alert] %>
<%= tag.div(flash[:notice], class: "alert alert-success") if flash[:notice] %>

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 350px;">
    <h3 class="text-center mb-4">Đăng Nhập</h3>
    <%= form_with url: session_path, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email_address, "Email", class: "form-label" %>
        <%= form.email_field :email_address, class: "form-control", placeholder: "Nhập email của bạn", value: params[:email_address], required: true, autofocus: true, autocomplete: "username" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, "Mật khẩu", class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu", required: true, autocomplete: "current-password", maxlength: 72 %>
      </div>
      <div class="d-grid">
        <%= form.submit "Đăng Nhập", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= link_to "Quên mật khẩu?", new_password_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
